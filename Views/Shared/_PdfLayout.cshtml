<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - PDF</title>
    <style>
      
        body {
            font-family: Arial, sans-serif;
            font-size: 12px;
            margin: 20px;
        }

        header, footer {
            text-align: center;
            margin-bottom: 20px;
        }

            header h1 {
                font-size: 18px;
                margin: 0;
            }

        footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            font-size: 10px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #333;
            padding: 8px;
        }

        th {
            background-color: #f0f0f0;
        }
    </style>
</head>
<body>
    <header>
        <h1>@ViewData["Title"]</h1>
    </header>

    @RenderBody()

    
</body>
</html>
